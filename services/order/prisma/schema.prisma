generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Order {
  order_id     Int      @id @default(autoincrement())  // Change to Int and auto-increment
  customer_id  String   
  order_date   DateTime @default(now())
  total_amount Float
  status       String   

  order_items  OrderItem[]
  tracking     Tracking?
}

model OrderItem {
  order_item_id  Int      @id @default(autoincrement())  // Change to Int and auto-increment
  order_id       Int
  product_id     String
  quantity       Int
  price_per_unit Float

  order         Order   @relation(fields: [order_id], references: [order_id], onDelete: Cascade)
}

model Tracking {
  tracking_id    Int      @id @default(autoincrement())  // Change to Int and auto-increment
  order_id       Int      @unique
  latitude       Float
  longitude      Float
  tracking_status String
  last_update    DateTime @updatedAt

  order          Order    @relation(fields: [order_id], references: [order_id], onDelete: Cascade)
}



