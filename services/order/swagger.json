{
  "openapi": "3.0.0",
  "info": {
    "title": "Order API",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "http://localhost:3004"
    }
  ],
  "tags": [
    {
      "name": "Order",
      "description": "API for managing Orders"
    },
    {
      "name": "OrderItem",
      "description": "API for managing Order Items"
    },
    {
      "name": "Tracking",
      "description": "API for tracking Order statuses"
    }
  ],
  "paths": {
    "/orders": {
      "get": {
        "summary": "Get all orders",
        "tags": ["Order"],
        "responses": {
          "200": {
            "description": "List of orders",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Order"
                  }
                }
              }
            }
          }
        }
      },
      "post": {
        "summary": "Create a new order and send to RabbitMQ",
        "description": "This endpoint creates a new order, saves it to the database, and sends the order details to a RabbitMQ queue for processing.",
        "tags": ["Order"],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/NewOrder"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Order created and message sent to RabbitMQ"
          },
          "400": {
            "description": "Invalid input"
          }
        }
      }
    },
    "/orders/{id}": {
      "get": {
        "summary": "Get an order by ID",
        "tags": ["Order"],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Order details",
            "content": {
              "application/json": {
                "$ref": "#/components/schemas/Order"
              }
            }
          }
        }
      },
      "put": {
        "summary": "Update an order's status",
        "tags": ["Order"],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/UpdateOrderStatus"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Order updated"
          }
        }
      },
      "delete": {
        "summary": "Delete an order",
        "tags": ["Order"],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Order deleted"
          }
        }
      }
    },
    "/orders/{id}/items": {
      "get": {
        "summary": "Get all order items by order ID",
        "tags": ["OrderItem"],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "List of order items",
            "content": {
              "application/json": {
                "type": "array",
                "items": {
                  "$ref": "#/components/schemas/OrderItem"
                }
              }
            }
          }
        }
      }
    },
    "/tracking/{order_id}": {
      "get": {
        "summary": "Get tracking info for an order",
        "tags": ["Tracking"],
        "parameters": [
          {
            "name": "order_id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Tracking details",
            "content": {
              "application/json": {
                "$ref": "#/components/schemas/Tracking"
              }
            }
          }
        }
      },
      "put": {
        "summary": "Update tracking info",
        "tags": ["Tracking"],
        "parameters": [
          {
            "name": "order_id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {}
          }
        },
        "responses": {
          "200": {
            "description": "Tracking updated"
          }
        }
      },
      "delete": {
        "summary": "Delete tracking info",
        "tags": ["Tracking"],
        "parameters": [
          {
            "name": "order_id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Tracking deleted"
          }
        }
      }
    },
    "/tracking": {
      "get": {
        "summary": "Get all tracking",
        "tags": ["Tracking"],
        "responses": {
          "200": {
            "description": "List of tracking",
            "content": {
              "application/json": {
                "type": "array",
                "items": {
                  "$ref": "#/components/schemas/Tracking"
                }
              }
            }
          }
        }
      },
      "post": {
        "summary": "Create tracking for an order",
        "tags": ["Tracking"],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/NewTracking"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Tracking created"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Order": {
        "type": "object",
        "properties": {
          "order_id": {
            "type": "integer"
          },
          "customer_id": {
            "type": "integer"
          },
          "order_date": {
            "type": "string",
            "format": "date-time"
          },
          "total_amount": {
            "type": "number",
            "format": "float"
          },
          "status": {
            "type": "string",
            "enum": ["PENDING", "SHIPPED", "COMPLETED", "CANCELLED"]
          }
        }
      },
      "NewOrder": {
        "type": "object",
        "properties": {
          "customer_id": {
            "type": "integer"
          },
          "total_amount": {
            "type": "number",
            "format": "float"
          },
          "status": {
            "type": "string",
            "enum": ["PENDING", "SHIPPED", "COMPLETED", "CANCELLED"]
          },
          "order_items": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/NewOrderItem"
            }
          }
        }
      },
      "NewOrderItem": {
        "type": "object",
        "properties": {
          "product_id": {
            "type": "integer"
          },
          "quantity": {
            "type": "integer"
          },
          "price_per_unit": {
            "type": "number",
            "format": "float"
          }
        }
      },
      "UpdateOrderStatus": {
        "type": "object",
        "properties": {
          "status": {
            "type": "string",
            "enum": ["PENDING", "SHIPPED", "COMPLETED", "CANCELLED"]
          }
        }
      },
      "OrderItem": {
        "type": "object",
        "properties": {
          "order_item_id": {
            "type": "integer"
          },
          "order_id": {
            "type": "integer"
          },
          "product_id": {
            "type": "integer"
          },
          "quantity": {
            "type": "integer"
          },
          "price_per_unit": {
            "type": "number",
            "format": "float"
          }
        }
      },
      "Tracking": {
        "type": "object",
        "properties": {
          "tracking_id": {
            "type": "integer"
          },
          "order_id": {
            "type": "integer"
          },
          "latitude": {
            "type": "number",
            "format": "float"
          },
          "longitude": {
            "type": "number",
            "format": "float"
          },
          "tracking_status": {
            "type": "string",
            "enum": ["IN_TRANSIT", "DELIVERED", "CANCELLED"]
          },
          "last_update": {
            "type": "string",
            "format": "date-time"
          }
        }
      },
      "NewTracking": {
        "type": "object",
        "properties": {
          "order_id": {
            "type": "integer"
          },
          "latitude": {
            "type": "number",
            "format": "float"
          },
          "longitude": {
            "type": "number",
            "format": "float"
          },
          "tracking_status": {
            "type": "string",
            "enum": ["IN_TRANSIT", "DELIVERED", "CANCELLED"]
          }
        }
      }
    }
  }
}
