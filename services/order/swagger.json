{
  "openapi": "3.0.0",
  "info": {
    "title": "Logistics Order Management API",
    "version": "1.0.0",
    "description": "API for managing logistics orders, items, status history, and price calculations"
  },
  "servers": [
    {
      "url": "http://localhost:3004",
      "description": "Local development server"
    }
  ],
  "paths": {
    "/orders": {
      "get": {
        "summary": "Retrieve all orders",
        "description": "Fetches a list of all orders with their associated items, status history, and price calculations",
        "responses": {
          "200": {
            "description": "Successful retrieval of orders",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Order"
                  }
                }
              }
            }
          },
          "500": {
            "description": "Internal server error"
          }
        }
      },
      "post": {
        "summary": "Create a new order",
        "description": "Creates a new order with optional order items, status history, and price calculations",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/OrderInput"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Order created successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Order"
                }
              }
            }
          },
          "500": {
            "description": "Internal server error"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Order": {
        "type": "object",
        "required": [
          "order_id",
          "customer_id",
          "pickup_location",
          "delivery_location",
          "requested_pickup_date",
          "delivery_deadline",
          "total_price",
          "status"
        ],
        "properties": {
          "order_id": {
            "type": "integer"
          },
          "customer_id": {
            "type": "integer"
          },
          "pickup_location": {
            "type": "string"
          },
          "delivery_location": {
            "type": "string"
          },
          "requested_pickup_date": {
            "type": "string",
            "format": "date-time"
          },
          "delivery_deadline": {
            "type": "string",
            "format": "date-time"
          },
          "total_price": {
            "type": "number",
            "format": "float"
          },
          "status": {
            "type": "string"
          },
          "order_items": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/OrderItem"
            }
          },
          "order_status_history": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/OrderStatusHistory"
            }
          },
          "price_calculations": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/PriceCalculation"
            }
          }
        }
      },
      "OrderItem": {
        "type": "object",
        "required": [
          "item_id",
          "order_id",
          "cargo_type",
          "weight_kg",
          "dimensions_cm",
          "item_price",
          "status"
        ],
        "properties": {
          "item_id": {
            "type": "integer"
          },
          "order_id": {
            "type": "integer"
          },
          "cargo_type": {
            "type": "string"
          },
          "weight_kg": {
            "type": "number",
            "format": "float"
          },
          "dimensions_cm": {
            "type": "string"
          },
          "special_requirements": {
            "type": "string"
          },
          "item_price": {
            "type": "number",
            "format": "float"
          },
          "status": {
            "type": "string"
          }
        }
      },
      "OrderItemInput": {
        "type": "object",
        "required": [
          "cargo_type",
          "weight_kg",
          "dimensions_cm",
          "item_price",
          "status"
        ],
        "properties": {
          "cargo_type": {
            "type": "string"
          },
          "weight_kg": {
            "type": "number",
            "format": "float"
          },
          "dimensions_cm": {
            "type": "string"
          },
          "special_requirements": {
            "type": "string"
          },
          "item_price": {
            "type": "number",
            "format": "float"
          },
          "status": {
            "type": "string"
          }
        }
      },
      "OrderStatusHistory": {
        "type": "object",
        "required": [
          "history_id",
          "order_id",
          "status",
          "changed_at",
          "changed_by"
        ],
        "properties": {
          "history_id": {
            "type": "integer"
          },
          "order_id": {
            "type": "integer"
          },
          "status": {
            "type": "string"
          },
          "changed_at": {
            "type": "string",
            "format": "date-time"
          },
          "changed_by": {
            "type": "integer"
          },
          "notes": {
            "type": "string"
          }
        }
      },
      "OrderStatusHistoryInput": {
        "type": "object",
        "required": [
          "status",
          "changed_at",
          "changed_by"
        ],
        "properties": {
          "status": {
            "type": "string"
          },
          "changed_at": {
            "type": "string",
            "format": "date-time"
          },
          "changed_by": {
            "type": "integer"
          },
          "notes": {
            "type": "string"
          }
        }
      },
      "OrderInput": {
        "type": "object",
        "required": [
          "customer_id",
          "pickup_location",
          "delivery_location",
          "requested_pickup_date",
          "delivery_deadline",
          "total_price",
          "status"
        ],
        "properties": {
          "customer_id": {
            "type": "integer"
          },
          "pickup_location": {
            "type": "string"
          },
          "delivery_location": {
            "type": "string"
          },
          "requested_pickup_date": {
            "type": "string",
            "format": "date-time"
          },
          "delivery_deadline": {
            "type": "string",
            "format": "date-time"
          },
          "total_price": {
            "type": "number",
            "format": "float"
          },
          "status": {
            "type": "string"
          },
          "order_items": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/OrderItemInput"
            }
          },
          "order_status_history": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/OrderStatusHistoryInput"
            }
          },
          "price_calculations": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/PriceCalculationInput"
            }
          }
        }
      },
      "OrderUpdateInput": {
        "type": "object",
        "properties": {
          "customer_id": {
            "type": "integer"
