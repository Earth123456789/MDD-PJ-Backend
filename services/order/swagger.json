          },
          "total_price": {
            "type": "number",
            "format": "float"
          },
          "status": {
            "type": "string"
          }
        }
      },
      "PriceCalculation": {
        "type": "object",
        "required": [
          "calculation_id",
          "order_id",
          "base_price",
          "distance_factor",
          "weight_factor",
          "urgency_factor",
          "final_price"
        ],
        "properties": {
