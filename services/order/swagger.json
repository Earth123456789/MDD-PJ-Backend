          }
        }
      },
      "PriceCalculationInput": {
        "type": "object",
        "required": [
          "base_price",
          "distance_factor",
          "weight_factor",
          "urgency_factor",
          "final_price"
        ],
        "properties": {
          "base_price": {
            "type": "number",
            "format": "float"
          },
          "distance_factor": {
            "type": "number",
            "format": "float"
          },
          "weight_factor": {
            "type": "number",
            "format": "float"
          },
          "urgency_factor": {
            "type": "number",
            "format": "float"
          },
          "final_price": {
            "type": "number",
            "format": "float"
          }
        }
      }
    }
  }
}