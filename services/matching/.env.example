# Application
NODE_ENV=development
PORT=3002

# Database
DATABASE_URL=postgresql://postgres:postgres@postgres:5432/vehicle_matching?schema=public
DATABASE_SSL=false

# Redis
REDIS_URL=redis://redis:6379
REDIS_TTL=3600

# RabbitMQ
RABBITMQ_URL=amqp://guest:guest@rabbitmq:5672
RABBITMQ_QUEUE_PREFIX=vehicle_matching

# JWT (if you add authentication)
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRATION=3600

# ELK Stack
ELASTICSEARCH_NODE=http://elasticsearch:9200
ELASTICSEARCH_USERNAME=
ELASTICSEARCH_PASSWORD=

# Logging
LOG_LEVEL=debug

# Rate limiting
THROTTLE_TTL=60
THROTTLE_LIMIT=100

# CORS
CORS_ORIGIN=*

# Websocket
WS_PORT=4000

# User-Driver Service Connection
USER_DRIVER_SERVICE_URL="http://localhost:3001" ## use http://localhost:3001 when local
USER_DRIVER_API_KEY="your-api-key-here"  # authentication