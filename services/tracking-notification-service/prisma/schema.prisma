// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model TrackingUpdate {
  id            Int      @id @default(autoincrement())
  order_id      Int
  status        TrackingStatus
  location      Json?
  description   String?
  created_at    DateTime @default(now())
  updated_at    DateTime @updatedAt
}

model Notification {
  id            Int      @id @default(autoincrement())
  user_id       Int
  title         String
  message       String
  type          NotificationType
  read          Boolean  @default(false)
  order_id      Int?
  reference_id  String?
  created_at    DateTime @default(now())
  updated_at    DateTime @updatedAt
}

model UserDevice {
  id            Int      @id @default(autoincrement())
  user_id       Int
  device_token  String
  device_type   DeviceType
  is_active     Boolean  @default(true)
  created_at    DateTime @default(now())
  updated_at    DateTime @updatedAt

  @@unique([user_id, device_token])
}

model UserCache {
  user_id    Int      @id
  email      String?
  full_name  String?
  phone      String?
  role       String?
  created_at DateTime @default(now())
  updated_at DateTime @default(now()) @updatedAt

  @@map("user_cache")
}

enum TrackingStatus {
  ORDER_CREATED
  DRIVER_MATCHED
  DRIVER_ACCEPTED
  DRIVER_ARRIVED_AT_PICKUP
  PACKAGE_PICKED_UP
  IN_TRANSIT
  ARRIVED_AT_DROPOFF
  DELIVERED
  CANCELLED
}

enum NotificationType {
  ORDER_UPDATE
  DRIVER_UPDATE
  SYSTEM
  PAYMENT
}

enum DeviceType {
  IOS
  ANDROID
  WEB
}

