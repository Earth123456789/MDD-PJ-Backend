# App
NODE_ENV=development
PORT=3000
API_PREFIX=api

# Database
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=postgres
DB_DATABASE=accounts_service

# JWT
JWT_SECRET=your_development_jwt_secret_key
JWT_EXPIRATION=1d
JWT_REFRESH_SECRET=your_development_jwt_refresh_secret_key
JWT_REFRESH_EXPIRATION=7d

# Google OAuth (optional in development)
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_CALLBACK_URL=http://localhost:3000/api/auth/google/callback

# RabbitMQ
RABBITMQ_HOST=localhost
RABBITMQ_PORT=5672
RABBITMQ_USERNAME=guest
RABBITMQ_PASSWORD=guest
RABBITMQ_QUEUE=accounts_queue

# Twilio SMS (optional in development)
# TWILIO_ACCOUNT_SID=your_twilio_account_sid
# TWILIO_AUTH_TOKEN=your_twilio_auth_token
# TWILIO_PHONE_NUMBER=your_twilio_phone_number

# Frontend URL for redirects
FRONTEND_URL=http://localhost:8080